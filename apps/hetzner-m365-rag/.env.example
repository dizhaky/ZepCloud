# =============================================================================
# M365 RAG SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# MICROSOFT 365 AUTHENTICATION
# -----------------------------------------------------------------------------
M365_CLIENT_ID=your-azure-app-client-id
M365_CLIENT_SECRET=your-azure-app-client-secret
M365_TENANT_ID=your-azure-tenant-id
M365_AUTH_TYPE=interactive
M365_SCOPES=Files.Read.All,Sites.Read.All,Mail.Read,Calendars.Read,Contacts.Read

# -----------------------------------------------------------------------------
# ELASTICSEARCH
# -----------------------------------------------------------------------------
ELASTIC_PASSWORD=changeme-elastic-password
ES_HOST=elasticsearch
ES_PORT=9200
ES_USE_SSL=true
ES_VERIFY_CERTS=false

# -----------------------------------------------------------------------------
# POSTGRESQL
# -----------------------------------------------------------------------------
POSTGRES_DB=m365_rag
POSTGRES_USER=raguser
POSTGRES_PASSWORD=changeme-postgres-password
DATABASE_URL=postgresql+asyncpg://raguser:changeme-postgres-password@postgres:5432/m365_rag

# -----------------------------------------------------------------------------
# REDIS
# -----------------------------------------------------------------------------
REDIS_PASSWORD=changeme-redis-password

# -----------------------------------------------------------------------------
# MINIO
# -----------------------------------------------------------------------------
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme-minio-password
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=m365-documents

# -----------------------------------------------------------------------------
# OPENAI / LLM
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-3-large

# -----------------------------------------------------------------------------
# RAGFLOW
# -----------------------------------------------------------------------------
RAGFLOW_API_KEY=ragflow-default-key
RAGFLOW_SECRET_KEY=changeme-ragflow-secret

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# SECURITY
# -----------------------------------------------------------------------------
JWT_SECRET_KEY=changeme-jwt-secret-min-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# MONITORING
# -----------------------------------------------------------------------------
GRAFANA_ADMIN_PASSWORD=changeme-grafana-password

# -----------------------------------------------------------------------------
# BACKUP CONFIGURATION
# -----------------------------------------------------------------------------
BACKUP_DIR=/opt/backups
BACKUP_RETENTION_DAYS=7

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
SERVER_IP=your-hetzner-server-ip
SERVER_USER=root
DOMAIN=rag.yourdomain.com
